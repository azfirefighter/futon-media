{
	"compilerOptions": {
		"baseUrl": ".",
		"experimentalDecorators": true,
		"importHelpers": true,
		"lib": ["ESNext"],
		"module": "CommonJS",
		"noEmitHelpers": true,
		"outDir": "dist",
		"preserveWatchOutput": true,
		"sourceMap": true,
		"target": "ES2015",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["types/**/*.d.ts", "src/**/*.ts"]
}
