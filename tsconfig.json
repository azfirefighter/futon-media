{
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": ".",
		"experimentalDecorators": true,
		"importHelpers": true,
		"lib": ["esnext"],
		"module": "commonjs",
		"noEmitHelpers": true,
		"outDir": "dist",
		"preserveWatchOutput": true,
		"sourceMap": true,
		"target": "es2015",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["types/**/*.d.ts", "src/**/*.ts"]
}
