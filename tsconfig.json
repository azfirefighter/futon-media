{
	"compilerOptions": {
		"baseUrl": ".",
		"experimentalDecorators": true,
		"lib": ["es2020"],
		"module": "commonjs",
		"outDir": "dist",
		"preserveWatchOutput": true,
		"sourceMap": true,
		"target": "esnext",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"exclude": ["node_modules", "dist"],
	"include": ["types/**/*.d.ts", "src/**/*.ts"]
}
