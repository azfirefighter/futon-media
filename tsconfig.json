{
	"compilerOptions": {
		"baseUrl": ".",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"lib": ["esnext"],
		"noEmitHelpers": true,
		"noErrorTruncation": true,
		"outDir": "dist",
		"preserveWatchOutput": true,
		"sourceMap": true,
		"target": "es5",
		"plugins": [{ "transform": "ts-transform-paths" }],
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"exclude": ["node_modules", "dist"],
	"include": ["types/**/*.d.ts", "src/**/*.ts"]
}
