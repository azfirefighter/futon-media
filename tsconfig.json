{
	"compilerOptions": {
		"baseUrl": "src",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"lib": ["dom", "esnext"],
		"noEmitHelpers": true,
		"noErrorTruncation": true,
		"outDir": "dist",
		"preserveWatchOutput": true,
		"sourceMap": true,
		"target": "es5",
		"paths": {
			"@/*": ["*"]
		},
		"plugins": [
			{ "transform": "typescript-transform-paths" }
		]
	},
	"exclude": ["node_modules", "dist"],
	"include": ["types/**/*.d.ts", "src/**/*.ts"]
}
